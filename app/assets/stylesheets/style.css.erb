body, html {
  margin:0 auto;
  font-family: Georgia, serif;
  font-size: 17px;
}

h2 {
  font-family: Georgia, serif;
  font-size: 17px;
  font-weight: normal;
}

div { 
  display: block; 
}

img { 
  border: 0px; 
}

a { 
  color: #0069D6; 
  text-decoration: none;
}

a:visited { 
  color: #0069D6; 
}

a:hover { 
  color: #0069D6; 
  text-decoration:underline; 
}

blockquote {
  background:url(<%= asset_path 'blockquote.png' %>) no-repeat top left;
  margin-left:0;
  margin-right:3em;
  padding:0 0 0 2em;
  font-size: 0.95em;
}

.entry p { 
  margin-top: 12px; 
  margin-bottom: 12px;
}

.posterous_quote_citation { 
  font-size: 13px; 
}

#sharewoodtitle h1{
  margin-top: 10px; 
  margin-bottom: 3px;
  font-size: 56px;
  text-align: center;
  font-weight: normal;
}

#sharewoodtitle a { 
  color: black; 
  text-decoration:none; 
}

#sharewoodtitle a:visited { 
  text-decoration:none; 
}

#tagline { 
  border-top:1px solid #000;
  border-bottom:1px solid #000;
  text-align: center;
  margin-bottom: 10px;
  padding-top: 4px;
  padding-bottom: 4px;
}

#wrap {
  margin-left: auto;
  margin-right: auto;
  width: 900px;
}

#main {
  width: 675px;
}

#sidebar {
  width: 200px;
  float: right;
}

.post {
  padding-top: 10px;
  padding-bottom: 10px;
  border-bottom: 1px solid black;
}

.post img {
  margin-bottom:10px;
}

.title {
  float:left;
  width:100%;
  font-family: Ubuntu, Helvetica, sans-serif;
  font-size: 24px;
  padding-bottom: 6px;
  display: block;
}

.title a {
  text-decoration:none;
  font-weight:bold;
  color: black;
}

.sub {
  font-size: 14px;
  padding-top: 3px;
  padding-bottom: 6px;
}

.entry_bottom {
  text-align:right;
}

#footer {
  margin-top:30px;
  text-align: center;
  padding:5px;
  border-top: 1px solid black;
}

#search_form #search {
  background: transparent url(<%= asset_path 'search.gif' %>) no-repeat left;
  background-color: #fff;
  no-repeat scroll 0pt 50%;
  padding:3px 2px 3px 25px;
  font-weight: bold;
  font-size:0.8em;
  width: 160px;
}

.pagination {
  font-family: Helvetica, Arial, sans-serif;
  text-decoration: none;
  font-size: 14px;
  margin-top: 4px;
}

.page, .next, .last, .first, .prev {
  padding-top: 1px;
  padding-bottom: 0px;
  padding-left: 4px;
  padding-right: 4px;
  border: 1px solid black;
  margin: 1px;
  display: block;
  float: left;
  height: 16px;
  line-height: 16px; 
}

.current {
  font-weight: bold;
}
