<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label "Jelszó" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Megerősítés" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Regisztrálok", :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
